{% extends '::base.html.twig' %}

{% block body -%}
    {% for entity in entities %}
        <div class="list-group">
            <a href="{{ path('location_show', { 'id': entity.id }) }}" class="list-group-item active">
                <h4 class="list-group-item-heading">{{ entity.title }}</h4>

                <p class="list-group-item-text">{{ entity.description|raw }}</p>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-default form-control" href="{{ path('location_edit', { 'id':
                    entity.id }) }}">Edit</a>
            {% endif %}
        </div>

    {% endfor %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-default form-control" href="{{ path('location_new') }}">
            Create a new location
        </a>
    {% endif %}

{% endblock %}
