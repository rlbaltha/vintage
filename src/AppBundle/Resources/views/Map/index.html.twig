{% extends '::base.html.twig' %}

{% block body -%}
    {% for entity in entities %}
        <div class="list-group">
            <a href="{{ path('map_show', { 'id': entity.id }) }}" class="list-group-item" style="color: white;background-image: url('{{ entity.background }}')">
                <h4 class="list-group-item-heading" style="color: white;">{{ entity.title }}</h4>

                <p class="list-group-item-text">{{ entity.description }}</p>
            </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-default  form-control" href="{{ path('map_edit', { 'id':
                        entity.id }) }}">Edit</a>
                {% endif %}
        </div>
    {% endfor %}

        {% if is_granted('ROLE_USER') %}
            <a class="btn btn-default form-control" href="{{ path('map_new') }}">
                Create a new map
            </a>
        {% endif %}


{% endblock %}
